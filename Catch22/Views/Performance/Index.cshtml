@model Catch22.Models.PerformancesViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Performances <small>All Performances</small></h1>
        <table class="table table-bordered">
            <tr>
                <td>Name</td>
                <td>Date</td>
                <td>Time</td>
                <td>Location</td>
                <td>Details</td>
                <td></td>
                <td></td>
            </tr>
            @foreach (var item in Model.AllPerformances)
            {
                <tr>
                    <td>@item.PerformanceName</td>
                    <td>@item.PerformanceDate</td>
                    <td>@item.PerformanceTime</td>
                    <td>@item.Location</td>
                    <td>@item.Details</td>
                    <td><a href="@Url.Action("Edit", "Performance", new { id = @item.PerformanceID })">Edit</a></td>
                    <td>@Html.ActionLink("Delete", "Delete", new { id = item.PerformanceID }, new { @class = "delete-link" })</td>
                </tr>
            }
        </table>
    </div>
</div><!-- /.row -->
<div class="row">
    <div class="col-md-6">
        <h2>Add a new event</h2>
        @Html.Partial("_NewPerformance", Model.NewPerformance)
    </div>
    <div class="col-md-6">
        <h3>Notes</h3>
        <ul>
            <li>If there are no gigs that are upcoming, the site will display a generic message and prompt to contact us for booking.</li>
            <li>Gigs that are past the current date will not show on the site.  I can change the timeframe or may add an override for this eventually.</li>
            <li>I think it is okay to delete this after a certain point but it may be good to keep a few in there if the event has just passed.</li>
        </ul>
    </div>
</div>

<div id="delete-dialog" title="Confirmation">
    <p>Are you sure you want to delete this item?</p>
</div>