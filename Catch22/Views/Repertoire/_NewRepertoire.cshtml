@model Catch22.Models.Repertoire

@using (Html.BeginForm("Create", "Repertoire", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(model => model.SongTitle)
        @Html.TextBoxFor(model => model.SongTitle, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.SongTitle)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.OriginalArtist)
        @Html.TextBoxFor(model => model.OriginalArtist, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.OriginalArtist)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Soloist)
        @Html.TextBoxFor(model => model.Soloist, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Soloist)
    </div>
    <input type="submit" value="Create" class="btn btn-default" />
}