@model Catch22.Models.RepertoireViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Edit Current Repertoire</h1>
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-bordered">
                    <tr>
                        <th>Song Title</th>
                        <th>Original Artist</th>
                        <th>Soloist</th>
                        <th>Date Entered</th>
                        <th>Date Retired</th>
                        <th></th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model.AllRep)
                    {
                        <tr>
                            <td>@item.SongTitle</td>
                            <td>@item.OriginalArtist</td>
                            <td>@item.Soloist</td>
                            <td>@item.DateEntered</td>
                            <td>@item.Retired</td>
                            <td><a href="@Url.Action("Edit", "Repertoire", new { id = @item.RepertoireID })">Edit</a></td>
                            <td>@Html.ActionLink("Delete", "Delete", new { id = item.RepertoireID }, new { @class = "delete-link" })</td>
                        </tr>
                    }         
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h2>Add a Song</h2>
        @Html.Partial("_NewRepertoire", Model.NewRep)
    </div>
    <div class="col-md-6">
        <h3>Notes</h3>
        <ul>
            <li>Refrain from deleting songs unless you made a mistake while entering or it is a song that is permanently removed.</li>
            <li>The "Retired" checkbox will cause a song to not show on the website.</li>
            <li>
                I'll be adding another field for "Seasonal" or "Special" songs like Christmas tunes and they will be in a different or extra
                section of the website
            </li>
        </ul>
    </div>
</div>

<div id="delete-dialog" title="Confirmation">
    <p>Are you sure you want to delete this item?</p>
</div>