<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:image" content="~/Content/img/bg.jpg" />
    <title>@ViewBag.Title - Catch 22 - Fun A Cappella</title>
    @Styles.Render("~/Content/cssMain")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- <a class="navbar-brand" href="#top"><img class="nav-logo" src="img/logonew.png" alt="Catch 22" /></a> -->
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#top">Home</a></li>
                    <li><a href="#about">About Catch 22</a></li>
                    <li><a href="#performances">Performances</a></li>
                    <li><a href="#members">Members</a></li>
                    <li><a href="#repertoire">Our Music</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>

    <!-- /Side Menu -->

    <!-- Full Page Image Header Area -->
    <div id="top" class="header">
        <div class="vert-text">
            <img class="logo" src="~/Content/img/new-logo.png" alt="Catch 22" />
            <h3>
                <a href="#about" class="btn btn-default btn-lg">Learn More!</a>
            </h3>
        </div>
    </div>

    <!-- /Full Page Image Header Area -->
    @RenderBody()
    <!-- Footer -->

    <footer>
        <div id="contact" class="container">
            <div class="row">
                <div class="text-center">
                    <h3>Interested in booking Catch 22 to perform at your event?</h3>
                    <h4>Send an email to booking@catch22nc.org today with the date and details for your event.  We would love to sing for you!</h4>
                </div>
            </div>
            <div class="row">
                <div class="container text-center">
                    <button class="btn btn-primary" id="flip" type="button">Click here to send us a message!</button>
                    <div id="panel">
                        <div id="success" class="">
                        </div>
                        <form role="form" action="" id="contactEmail" method="post">
                            <div class="form-group">
                                <label for="fromName">Name</label>
                                <input type="text" class="form-control" name="fromName">
                            </div>
                            <div class="form-group">
                                <label for="fromEmail">Email Address</label>
                                <input type="text" class="form-control" name="fromEmail">
                            </div>
                            <div class="form-group">
                                <label for="subject">Subject</label>
                                <input type="text" class="form-control" name="subject">
                            </div>
                            <div class="form-group">
                                <label for="emailText">Email Text</label>
                                <textarea class="form-control" name="emailText" rows="5"></textarea>
                            </div>
                            <button type="submit" name="submitEmail" id="submitEmail" class="btn btn-default">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-6 col-md-offset-3 text-center">
                    <h3>Check us out using the social media links below!</h3>
                    <ul class="list-inline">
                        <li><a href="https://www.facebook.com/catch22nc" target="blank"><i class="fa fa-facebook fa-4x"></i></a></li>
                        <li><a href="https://twitter.com/Catch22NC" target="blank"><i class="fa fa-twitter fa-4x"></i></a></li>
                        <li><a href="http://www.youtube.com/user/Catch22sings" target="blank"><i class="fa fa-youtube-square fa-4x"></i></a></li>
                    </ul>
                    <div class="top-scroll">
                        <a href="#top"><i class="fa fa-circle-arrow-up scroll fa-4x"></i></a>
                    </div>
                    <hr>
                    <p>Copyright &copy; Catch 22 2013</p>
                </div>
            </div>
        </div>
    </footer>
    <!-- /Footer -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/mainsite")
    @RenderSection("scripts", required: false)
</body>
</html>
