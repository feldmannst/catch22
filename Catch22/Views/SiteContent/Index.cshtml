@model Catch22.Models.SiteContent

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}
<div class="row">
    <div class="col-lg-6">
        <h1>Change Site Content</h1>
        @if (ViewBag.Success == true)
        {
            <div class='alert alert-success'>
                <p>
                    Updated Successfully
                </p>
            </div>
        }
        
        @using (Html.BeginForm("Update", "SiteContent", FormMethod.Post, new { @class="form form-horizontal"}))
        {
            @Html.HiddenFor(model => model.SiteContentID)
            @Html.HiddenFor(model => model.ContentTitle)
            <div class="form-group">
                @Html.LabelFor(model => model.ContentText, new { @class="control-label"})
                @Html.TextAreaFor(model => model.ContentText, new { rows = "7", @class="form-control"})
            </div>

            <button type="submit" class="btn btn-default">Update Blurb</button>
        }
    </div>
</div>