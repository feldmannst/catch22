@model Catch22.Models.News

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <h2>Edit News Item</h2>
        @using (Html.BeginForm("Edit", "News", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.NewsID)
            @Html.HiddenFor(model => model.UserID)

            <div class="form-group">
                @Html.LabelFor(model => model.NewsText, htmlAttributes: new { @class = "control-label" })
                @Html.TextAreaFor(model => model.NewsText, new { @class = "form-control", rows = "3" })
                @Html.ValidationMessageFor(model => model.NewsText)
             </div>
            
            <div class="form-group">
                @Html.LabelFor(model => model.ExpirationDate, htmlAttributes: new { @class="control-label" })
                @Html.TextBoxFor(model => model.ExpirationDate, new { @class = "form-control datepicker" })
            </div>
            <input type="submit" value="Save" class="btn btn-default" />
        }
        <a href="@Url.Action("Index", "News")">Back to all News Items.</a>
    </div>
</div>