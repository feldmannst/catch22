@model IEnumerable<Catch22.Models.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Edit News Items</h1>
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-bordered">
                    <tr>
                        <th>Posted By</th>
                        <th>News Text</th>
                        <th>Expiration Date</th>
                        <th></th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.User.FirstName @item.User.LastName</td>
                            <td>@item.NewsText</td>
                            <td>@item.ExpirationDate</td>
                            <td><a href="@Url.Action("Edit", "News", new { id = @item.NewsID })">Edit</a></td>
                            <td>@Html.ActionLink("Delete", "Delete", new { id= item.NewsID }, new { @class ="delete-link" })</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div><!-- /.row -->
<div class="row">
    <div class="col-md-6">
        <h2>Add a News Item</h2>
        <form role="form" action="@Url.Action("Create", "News")" method="post">
            <div class="form-group">
                <label for="Name">News Text</label>
                <textarea class="form-control" name="news_text" id="newstext" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="Date">Expiration Date</label>
                <input type="text" class="form-control datepicker" name="expdate">
            </div>
            <button type="submit" class="btn btn-default">Add</button>
        </form>
    </div>
</div>

<div id="delete-dialog" title="Confirmation">
    <p>Are you sure you want to delete this item?</p>
</div>