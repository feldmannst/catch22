@model Catch22.Models.CMSHomeViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h1>Catch 22 <small>Member pages</small></h1>
        <div class="row">
            <div class="col-lg-6">
                <h4>Welcome to the Catch 22 member pages!</h4>
                <p>Currently this page only serves a few functions:</p>
                <ol>
                <li>Edit the performances that appear on the actual website</li>
                <li>Access to the Google Calendar for your convenience</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <h2>News and Updates</h2>
                @if (Model.NewsItems.Count > 0)
                {
                    foreach (var news in Model.NewsItems)
                    {
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="alert alert-info">
                                    <h4>From: @news.User.FirstName @news.User.LastName</h4>
                                    <p>@news.NewsText</p>
                                </div>
                            </div>
                        </div>
                    }
                }  
        </div>
    </div>
    <div class="col-lg-4">
        <h2>Send Email</h2>
    </div>
    <div class="col-lg-2">
    </div>
</div>