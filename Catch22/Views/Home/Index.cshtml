@model Catch22.Models.HomeViewModel

@{
    ViewBag.Title = "Home Page";
}

<!-- Intro -->
<div id="about" class="intro">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <h2>What is Catch 22?</h2>
                <p class="lead">@Model.MainBlurb</p>
                <h3><a href="#contact" target="_blank">contact us today to see what we can do for you</a></h3>
            </div>
        </div>
    </div>
</div>

<!-- /Intro -->

<!-- Performances -->

<div id="performances" class="services">
    <div class="container">
        <div class="row">
            <div class="text-center">
                <h3>Check out our latest video!</h3>
                <div class='embed-container'>
                    <iframe id="ytvid" src='http://www.youtube.com/embed/ai4xze754sY' frameborder='0' allowfullscreen></iframe>
                </div>
                <h3><a href="http://www.youtube.com/user/Catch22sings" target="_blank" class="btn btn-primary">Visit our Channel</a> to see more of our videos!</h3>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4 text-center">
                <h2>Upcoming Performances</h2>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="table-responsive">
                @if (Model.Performances.Count == 0)
                {
                    <div class="col-md-4 col-md-offset-4 text-center">
                        <h4>No Performances at this time.</h4>
                        <p><a href="#contact" class="btn btn-default">Contact Catch 22</a></p>
                        <h4>to have us perform at your event!</h4>
                    </div> 
                }
                else
                {
                    <table class="table table-bordered">
                        <tr>
                            <th>What?</th>
                            <th>Date?</th>
                            <th>Time?</th>
                            <th>Where?</th>
                            <th>Details</th>
                        </tr>
                        @foreach (var item in Model.Performances)
                        {
                            <tr>
                                <td class="bigbold">@item.PerformanceName</td>
                                <td>@Html.DisplayFor(model => @item.PerformanceDate)</td>
                                <td>@item.PerformanceTime</td>
                                <td>@item.Location</td>
                                <td>@item.Details</td>
                            </tr>
                        }
                    </table>
                }              
            </div>
        </div>
    </div>
</div>

<!-- /Performances -->

<!-- Callout -->

<div class="callout">
    <div class="vert-text">
        <h1>Fun. A Cappella.</h1>
    </div>
</div>

<!-- Members -->

<div id="members" class="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 text-center">
                <h2>Meet Catch 22!</h2>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="text-center">
                <div class="btn-group">
                    <button type="button" onclick='mySwipe.prev()' class="btn btn-default">Previous</button>
                    <button type="button" onclick='mySwipe.slide(0, 150)' class="btn btn-default memberBioButton">Ashley</button>
                    <button type="button" onclick='mySwipe.slide(1, 150)' class="btn btn-default memberBioButton">John</button>
                    <button type="button" onclick='mySwipe.slide(2, 150)' class="btn btn-default memberBioButton">Ken P</button>
                    <button type="button" onclick='mySwipe.slide(3, 150)' class="btn btn-default memberBioButton">Ken M</button>
                    <button type="button" onclick='mySwipe.slide(4, 150)' class="btn btn-default memberBioButton">Mike</button>
                    <button type="button" onclick='mySwipe.slide(5, 150)' class="btn btn-default memberBioButton">Scott</button>
                    <button type="button" onclick='mySwipe.next()' class="btn btn-default">Next</button>
                </div>
            </div>
            <p></p>
        </div>
        <div class="row">
            <div id="slider" class="swipe">
                <div class="swipe-wrap">
                    @foreach(var bio in Model.MemberBios)
                    {
                        <div class="swipe-item">
                            <div class="col-md-4 col-md-offset-2 text-center">
                                <div class="portfolio-item">
                                    <img class="img-portfolio img-responsive" alt="Image cannot be displayed" src="~/Content/@bio.PictureURL" />
                                </div>
                            </div>
                            <div class="col-md-4 text-center">
                                <div class="portfolio-item">
                                    <h4>@bio.User.FirstName @bio.User.LastName - @bio.VoicePart</h4>
                                    @if (bio.ExtraText != null)
                                    {
                                        <p>@bio.ExtraText</p>
                                    }
                                    <p><b>Musical Influences:</b> @bio.MusicalInfluences</p>
                                    <p>@bio.BioText</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- /Members -->

<!-- Repertoire -->

<div id="repertoire" class="call-to-action">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 text-center">
                <h2>Current Repertoire</h2>
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tr>
                        <th>Song Title</th>
                        <th>Original Artist</th>
                        <th>Soloist(s)</th>
                    </tr>
                    @foreach (var rep in Model.Repertoire)
                    {
                        <tr>
                            <td>@rep.SongTitle</td>
                            <td>@rep.OriginalArtist</td>
                            <td>@rep.Soloist</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

<!-- /Repertoire -->